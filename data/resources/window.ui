<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="libhandy" version="1.0" />
  <template class="DialectWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">300</property>
    <property name="focus-widget">src_text</property>
    <child>
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">loading</property>
            <property name="child">
              <object class="GtkWindowHandle">
                <property name="can-focus">False</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkSpinner">
                        <property name="can-focus">False</property>
                        <property name="spinning">True</property>
                        <property name="width-request">32</property>
                        <property name="height-request">32</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="can-focus">False</property>
                    <property name="wrap">1</property>
                    <property name="label" translatable="yes">Loading...</property>
                    <attributes>
                      <attribute name="scale" value="2"></attribute>
                      <attribute name="weight" value="bold"></attribute>
                    </attributes>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">error</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar">
                    <property name="title-widget">
                      <object class="GtkLabel">
                        <property name="can-focus">False</property>
                        <property name="label" translatable="yes">Dialect</property>
                        <property name="single-line-mode">1</property>
                        <property name="ellipsize">end</property>
                        <property name="width-chars">5</property>
                        <style>
                          <class name="title" />
                        </style>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="vexpand">True</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="can-focus">False</property>
                        <property name="wrap">1</property>
                        <property name="label" translatable="yes">Failed loading translator backend</property>
                        <attributes>
                          <attribute name="scale" value="1.5"></attribute>
                          <attribute name="weight" value="bold"></attribute>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="error_message">
                        <property name="can-focus">False</property>
                        <property name="wrap">1</property>
                        <property name="selectable">1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkButton" id="retry_backend_btn">
                            <property name="label" translatable="yes">Retry</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="label" translatable="yes">Open preferences</property>
                            <property name="action-name">app.preferences</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">translate</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar">
                    <property name="centering-policy">strict</property>
                    <property name="title-widget">
                      <object class="GtkStack" id="title_stack">
                        <property name="transition-type">crossfade</property>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">selector</property>
                            <property name="child">
                              <object class="GtkBox" id="langs_button_box">
                                <property name="homogeneous">False</property>
                                <child>
                                  <object class="GtkMenuButton" id="src_lang_btn">
                                    <property name="focus-on-click">False</property>
                                    <property name="receives-default">True</property>
                                    <property name="icon-name">pan-down-symbolic</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="switch_btn">
                                    <property name="receives-default">True</property>
                                    <property name="tooltip-text" translatable="yes">Switch languages</property>
                                    <property name="icon-name">object-flip-horizontal-symbolic</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkMenuButton" id="dest_lang_btn">
                                    <property name="focus-on-click">False</property>
                                    <property name="receives-default">True</property>
                                    <property name="icon-name">pan-down-symbolic</property>
                                  </object>
                                </child>
                                <style>
                                  <class name="linked" />
                                </style>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">label</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="can-focus">False</property>
                                <property name="label">Dialect</property>
                                <style>
                                  <class name="title" />
                                </style>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <child>
                      <object class="GtkBox">
                        <child>
                          <object class="GtkButton" id="return_btn">
                            <property name="sensitive">False</property>
                            <property name="receives-default">True</property>
                            <property name="tooltip-text" translatable="yes">Previous translation</property>
                            <property name="icon-name">go-previous-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="forward_btn">
                            <property name="sensitive">False</property>
                            <property name="receives-default">True</property>
                            <property name="tooltip-text" translatable="yes">Next translation</property>
                            <property name="icon-name">go-next-symbolic</property>
                          </object>
                        </child>
                        <style>
                          <class name="linked" />
                        </style>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkMenuButton" id="menu_btn">
                        <property name="focus-on-click">False</property>
                        <property name="direction">none</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkOverlay">
                    <property name="vexpand">True</property>
                    <property name="child">
                      <object class="GtkBox" id="main_box">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkBox" id="translator_box">
                            <property name="vexpand">True</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="spacing">12</property>
                            <property name="homogeneous">True</property>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkScrolledWindow">
                                    <property name="vexpand">True</property>
                                    <property name="has-frame">True</property>
                                    <style>
                                      <class name="translation-frame" />
                                    </style>
                                    <property name="child">
                                      <object class="GtkTextView" id="src_text">
                                        <property name="wrap-mode">word-char</property>
                                        <property name="margin-start">9</property>
                                        <property name="margin-end">9</property>
                                        <property name="top-margin">9</property>
                                        <property name="bottom-margin">9</property>
                                        <child>
                                          <object class="GtkEventControllerKey" id="src_key_ctrlr"/>
                                        </child>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkRevealer" id="src_pron_revealer">
                                    <property name="child">
                                      <object class="GtkScrolledWindow">
                                        <property name="has-frame">True</property>
                                        <property name="child">
                                          <object class="GtkLabel" id="src_pron_label">
                                            <property name="can-focus">False</property>
                                            <property name="margin-top">4</property>
                                            <property name="margin-bottom">4</property>
                                            <property name="margin-start">9</property>
                                            <property name="margin-end">9</property>
                                            <property name="xalign">0</property>
                                            <property name="wrap">1</property>
                                            <property name="wrap-mode">word-char</property>
                                            <style>
                                              <class name="dim-label" />
                                            </style>
                                          </object>
                                        </property>
                                        <style>
                                          <class name="pronunciation" />
                                        </style>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkInfoBar" id="mistakes">
                                    <property name="revealed">False</property>
                                    <style>
                                      <class name="mistakes" />
                                    </style>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="spacing">8</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="can-focus">False</property>
                                            <property name="icon-name">error-correct-symbolic</property>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel" id="mistakes_label">
                                            <property name="can-focus">False</property>
                                            <property name="wrap">True</property>
                                            <property name="wrap-mode">word-char</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkButton" id="clear_btn">
                                        <property name="sensitive">False</property>
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Clear</property>
                                        <property name="icon-name">edit-clear-all-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="paste_btn">
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Paste</property>
                                        <property name="icon-name">edit-paste-symbolic</property>>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="src_voice_btn">
                                        <property name="sensitive">False</property>
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Listen</property>
                                        <child>
                                          <placeholder/>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="char_counter">
                                        <property name="can-focus">False</property>
                                        <property name="margin-start">4</property>
                                        <property name="margin-end">4</property>
                                        <property name="label">0/5000</property>
                                        <property name="hexpand">True</property>
                                        <property name="halign">end</property>
                                        <attributes>
                                          <attribute name="scale" value="0.84999999999999998"></attribute>
                                        </attributes>
                                        <style>
                                          <class name="dim-label" />
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="translate_btn">
                                        <property name="label" translatable="yes">Translate</property>
                                        <property name="sensitive">False</property>
                                        <property name="receives-default">True</property>
                                        <style>
                                          <class name="suggested-action" />
                                        </style>
                                      </object>
                                    </child>
                                    <style>
                                      <class name="toolbox" />
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox" id="dest_box">
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkScrolledWindow">
                                    <property name="vexpand">True</property>
                                    <property name="has-frame">True</property>
                                    <style>
                                      <class name="translation-frame" />
                                    </style>
                                    <property name="child">
                                      <object class="GtkTextView" id="dest_text">
                                        <property name="editable">False</property>
                                        <property name="wrap-mode">word-char</property>
                                        <property name="margin-start">9</property>
                                        <property name="margin-end">9</property>
                                        <property name="top-margin">9</property>
                                        <property name="bottom-margin">9</property>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkRevealer" id="dest_pron_revealer">
                                    <property name="transition-type">slide-down</property>
                                    <property name="reveal-child">False</property>
                                    <child>
                                      <object class="GtkScrolledWindow">
                                        <property name="has-frame">True</property>
                                        <child>
                                          <object class="GtkLabel" id="dest_pron_label">
                                            <property name="can-focus">False</property>
                                            <property name="margin-top">4</property>
                                            <property name="margin-bottom">4</property>
                                            <property name="margin-start">9</property>
                                            <property name="margin-end">9</property>
                                            <property name="xalign">0</property>
                                            <property name="wrap">True</property>
                                            <property name="wrap-mode">word-char</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <style>
                                          <class name="pronunciation"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkSpinner" id="trans_spinner">
                                        <property name="can-focus">False</property>
                                        <property name="tooltip-text" translatable="yes">Translation in progress...</property>
                                        <property name="margin-start">8</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkImage" id="trans_warning">
                                        <property name="can-focus">False</property>
                                        <property name="tooltip-text" translatable="yes">Translation seems to have failed</property>
                                        <property name="margin-start">8</property>
                                        <property name="icon-name">dialog-warning-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="copy_btn">
                                        <property name="sensitive">False</property>
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Copy</property>
                                        <property name="hexpand">True</property>
                                        <property name="halign">end</property>
                                        <property name="icon-name">edit-copy-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="dest_voice_btn">
                                        <property name="sensitive">False</property>
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Listen</property>
                                        <child>
                                          <placeholder />
                                        </child>
                                      </object>
                                    </child>
                                    <style>
                                      <class name="toolbox" />
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkRevealer" id="actionbar">
                            <property name="transition-type">slide-down</property>
                            <property name="reveal-child">False</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="sensitive" bind-source="langs_button_box" bind-property="sensitive" />
                                    <property name="margin-start">8</property>
                                    <property name="margin-end">8</property>
                                    <property name="margin-top">8</property>
                                    <property name="margin-bottom">8</property>
                                    <property name="hexpand">True</property>
                                    <child>
                                      <object class="GtkMenuButton" id="src_lang_btn2">
                                        <property name="hexpand">True</property>
                                        <property name="sensitive" bind-source="src_lang_btn" bind-property="sensitive" />
                                        <property name="label" bind-source="src_lang_btn" bind-property="label" />
                                        <property name="icon-name">pan-down-symbolic</property>
                                        <property name="focus-on-click">False</property>
                                        <property name="receives-default">True</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="switch_btn2">
                                        <property name="sensitive" bind-source="switch_btn" bind-property="sensitive" />
                                        <property name="receives-default">True</property>
                                        <property name="tooltip-text" translatable="yes">Switch languages</property>
                                        <property name="icon-name">object-flip-horizontal-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkMenuButton" id="dest_lang_btn2">
                                        <property name="hexpand">True</property>
                                        <property name="sensitive" bind-source="dest_lang_btn" bind-property="sensitive" />
                                        <property name="label" bind-source="dest_lang_btn" bind-property="label" />
                                        <property name="icon-name">pan-down-symbolic</property>
                                        <property name="focus-on-click">0</property>
                                        <property name="receives-default">1</property>
                                      </object>
                                    </child>
                                    <style>
                                      <class name="linked" />
                                    </style>
                                  </object>
                                </child>
                                <style>
                                  <class name="bottomlang" />
                                </style>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <child type="overlay">
                      <object class="GtkRevealer" id="notification_revealer">
                        <property name="halign">center</property>
                        <property name="valign">start</property>
                        <property name="transition-type">none</property>
                        <property name="child">
                          <object class="GtkBox" id="notification_box">
                            <property name="halign">start</property>
                            <property name="valign">center</property>
                            <property name="spacing">12</property>
                            <child>
                              <object class="GtkImage">
                                <property name="can-focus">False</property>
                                <property name="icon-name">dialog-warning-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="notification_label">
                                <property name="hexpand">True</property>
                                <property name="can-focus">False</property>
                                <property name="halign">start</property>
                                <property name="label" translatable="yes">No network connection detected.</property>
                              </object>
                            </child>
                            <style>
                              <class name="app-notification" />
                            </style>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkEventControllerKey" id="window_key_ctrlr"/>
    </child>
  </template>
  <object class="GtkSizeGroup">
    <widgets>
      <widget name="src_lang_btn2" />
      <widget name="dest_lang_btn2" />
    </widgets>
  </object>
  <object class="GtkSizeGroup">
    <widgets>
      <widget name="src_lang_btn" />
      <widget name="dest_lang_btn" />
    </widgets>
  </object>
</interface>
